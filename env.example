# Application Settings
APP_NAME="Resume Optimizer SaaS"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# Database
DATABASE_URL="sqlite:///./resume_optimizer.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost:5432/resume_optimizer"

# Security - IMPORTANT: Change this in production!
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ================================
# Hugging Face API (FREE!)
# ================================
# Get your FREE API key from: https://huggingface.co/settings/tokens
# Steps:
# 1. Sign up at https://huggingface.co/join (free!)
# 2. Go to https://huggingface.co/settings/tokens
# 3. Click "New token" and select "Read" access
# 4. Copy the token and paste it below
HUGGINGFACE_API_KEY=""

# Choose your AI model (default works great!)
HUGGINGFACE_MODEL="mistralai/Mistral-7B-Instruct-v0.2"

# Alternative models you can try:
# HUGGINGFACE_MODEL="meta-llama/Llama-2-7b-chat-hf"           # Meta's Llama 2
# HUGGINGFACE_MODEL="HuggingFaceH4/zephyr-7b-beta"            # Zephyr (fast)
# HUGGINGFACE_MODEL="tiiuae/falcon-7b-instruct"               # Falcon
# HUGGINGFACE_MODEL="mistralai/Mixtral-8x7B-Instruct-v0.1"    # Mixtral (powerful)

# ================================
# Job Board APIs (for real job data)
# ================================
# Jooble API (FREE) - Get key from: https://jooble.org/api/about
JOOBLE_API_KEY=""

# Adzuna API (FREE) - Get key from: https://developer.adzuna.com/
ADZUNA_APP_ID=""
ADZUNA_API_KEY=""
ADZUNA_COUNTRY="us"  # us, gb, ca, au, de, fr, etc.

# LinkedIn (optional - for auto-apply feature)
LINKEDIN_EMAIL=""
LINKEDIN_PASSWORD=""
LINKEDIN_CLIENT_ID=""
LINKEDIN_CLIENT_SECRET=""

# ================================
# Automation Settings
# ================================
# Enable auto-apply feature (requires Playwright)
AUTO_APPLY_ENABLED=false

# Rate limiting for auto-apply
DAILY_APPLICATION_LIMIT=50
APPLICATION_DELAY_MIN=20  # Minimum seconds between applications
APPLICATION_DELAY_MAX=90  # Maximum seconds between applications

# Enable automated job fetching every 6 hours
ENABLE_JOB_SCHEDULER=false

# Redis (optional, for caching)
REDIS_URL="redis://localhost:6379/0"

# CORS - allowed origins for frontend
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".txt"]

# ================================
# NOTES:
# ================================
# - Hugging Face API is FREE with generous rate limits
# - No credit card required for the free tier
# - The free tier includes thousands of requests per month
# - For faster inference, consider Hugging Face PRO ($9/month)


